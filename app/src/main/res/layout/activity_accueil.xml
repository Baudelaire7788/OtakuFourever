            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Baudelaire Gboyou"
            android:textSize="10dp"
            android:textStyle="italic"
            android:textColor="#fff"
            android:gravity="center"/>
